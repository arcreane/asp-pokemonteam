@{
    ViewData["Title"] = "Pokémon Arena";
    Layout = "_GameLayout";
}

<div class="row h-100">
    <div class="col-md-8">
        <div class="game-panel">
            <h2 class="text-center mb-4">
                <i class="fas fa-fire text-danger"></i> 
                Bienvenue dans l'Arène Pokémon !
            </h2>
            
            <div class="row text-center">
                <div class="col-md-6 mb-3">
                    <div class="action-card bg-danger text-white" onclick="window.location.href='/PokemonArena/Combat'">
                        <i class="fas fa-sword fa-3x mb-3"></i>
                        <h4>Combat</h4>
                        <p>Affrontez des Pokémon sauvages</p>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="action-card bg-success text-white" onclick="window.location.href='/PokemonArena/Shop'">
                        <i class="fas fa-store fa-3x mb-3"></i>
                        <h4>Boutique</h4>
                        <p>Achetez des objets utiles</p>
                    </div>
                </div>
            </div>
            
            <div class="row text-center">
                <div class="col-md-6 mb-3">
                    <div class="action-card bg-info text-white" onclick="window.location.href='/PokemonArena/Profile'">
                        <i class="fas fa-user-circle fa-3x mb-3"></i>
                        <h4>Profil</h4>
                        <p>Gérez votre progression</p>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="action-card bg-warning text-dark">
                        <i class="fas fa-trophy fa-3x mb-3"></i>
                        <h4>Classement</h4>
                        <p>Prochainement...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="game-panel">
            <h4><i class="fas fa-newspaper"></i> Actualités</h4>
            <div id="game-news">
                <div class="news-item">
                    <small class="text-muted">Aujourd'hui</small>
                    <p>Bienvenue dans votre nouvelle aventure Pokémon !</p>
                </div>
                <div class="news-item">
                    <small class="text-muted">Astuce</small>
                    <p>Combattez pour gagner des Pokédollars et de l'expérience.</p>
                </div>
            </div>
        </div>
        
        <div class="game-panel mt-3">
            <h4><i class="fas fa-chart-line"></i> Vos Stats</h4>
            <div id="player-summary">
                <div class="stat-row">
                    <span>Niveau :</span>
                    <span id="player-level">1</span>
                </div>
                <div class="stat-row">
                    <span>Combats gagnés :</span>
                    <span id="battles-won">0</span>
                </div>
                <div class="stat-row">
                    <span>Total XP :</span>
                    <span id="total-xp">0</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updatePlayerSummary() {
            // Récupère les stats depuis le localStorage ou l'API
            const xp = parseInt(document.getElementById('player-xp').textContent) || 0;
            const level = Math.floor(xp / 100) + 1;
            
            document.getElementById('player-level').textContent = level;
            document.getElementById('total-xp').textContent = xp;
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            updatePlayerSummary();
        });
    </script>
}