@{
    ViewData["Title"] = "Choix du mode de jeu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choisis un mode de quiz</h2>

<div class="d-flex justify-content-center flex-wrap gap-4 mt-4">

    <form asp-action="StartQuiz" method="post">
        <input type="hidden" name="numberOfQuestions" value="10" />
        <button class="btn btn-success btn-lg">10 Questions</button>
    </form>

    <form asp-action="StartQuiz" method="post">
        <input type="hidden" name="numberOfQuestions" value="20" />
        <button class="btn btn-primary btn-lg">20 Questions</button>
    </form>

    <form asp-action="StartQuiz" method="post">
        <input type="hidden" name="numberOfQuestions" value="50" />
        <button class="btn btn-warning btn-lg">50 Questions</button>
    </form>

    <form asp-action="StartQuiz" method="post">
        <input type="hidden" name="numberOfQuestions" value="9999" />
        <button class="btn btn-danger btn-lg">Mode Infini 🔁</button>
    </form>

</div>

<div class="text-center mt-5">
    <a href="@Url.Action("SelectTeam", "Quiz")" class="btn btn-outline-secondary">← Revenir à la sélection des Pokémon</a>
</div>
