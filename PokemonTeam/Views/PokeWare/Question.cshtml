@model QuizQuestion

@{
    ViewData["Title"] = "Question du Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Question @((HttpContext.Session.GetObject<QuizSession>("QuizSession")?.CurrentQuestionIndex + 1) ?? 1)</h2>

<div class="text-center mt-4">

    @* Affichage visuel si image présente *@
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <p class="lead">Qui est ce Pokémon ?</p>
        <img src="@Model.ImageUrl" alt="Silhouette Pokémon" class="img-fluid" style="max-height: 300px;" />
    }
    else
    {
        <p class="lead">@Model.QuestionText</p>
    }
</div>

<form method="post" asp-action="SubmitAnswer">
    <div class="d-flex flex-column align-items-center gap-3 mt-4">
        @foreach (var choice in Model.Choices)
        {
            <button type="submit" name="userAnswer" value="@choice" class="btn btn-outline-primary w-50">
                @choice
            </button>
        }
    </div>
</form>

<div class="text-center mt-5">
    <a class="btn btn-secondary" asp-action="Shop">🛒 Boutique</a>
</div>
