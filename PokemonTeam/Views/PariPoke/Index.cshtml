@{
ViewData["Title"] = "Accueil - PokeRace";

}
@section Styles {
    <link rel="stylesheet" href="~/css/PariPoke.css" asp-append-version="true" />
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 text-center">
            <h2>PariPoke</h2>
            <img class="d-block mx-auto" src="Image/PariPoke-logo.png" width="500" height="500" alt="Logo PariPoke">
            <p>Bienvenue dans le jeu ! Choisis un Pokémon et prépare-toi à la course.</p>    
        </div>
    </div>
</div>


@Html.Partial("_ShopPartial")
@Html.Partial("_RunnerSelection")
@Html.Partial("_BetSelection")
@Html.Partial("_GamePartial")
@Html.Partial("_PlayerInfoPartial")

@section Scripts {
    <script src="~/js/PariPoke/common.js"></script>
    <script src="~/js/PlayerProfileHeader.js"></script>
    <script src="/js/PariPoke/previewUtils.js"></script>
    <script src="~/js/shop.js"></script>
    <script src="~/js/PariPoke/runnerSelection.js"></script>
    <script src="~/js/PariPoke/betSelection.js"></script>
    <script src="~/js/PariPoke/Game.js"></script>
}
