<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pokémon Arena</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/game.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="game-body">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary game-nav">
        <div class="container">
            <a class="navbar-brand" href="/PokemonArena">
                <i class="fas fa-bolt text-warning"></i> Pokémon Arena
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/PokemonArena"><i class="fas fa-home"></i> Accueil</a>
                <a class="nav-link" href="/PokemonArena/Combat"><i class="fas fa-fist-raised"></i> Combat</a>
                <a class="nav-link" href="/PokemonArena/Shop"><i class="fas fa-shopping-cart"></i> Shop</a>
                <a class="nav-link" href="/PokemonArena/Profile"><i class="fas fa-user"></i> Profil</a>
            </div>
            
            <div class="player-stats ms-3">
                <span id="player-name" class="text-light me-2">Chargement...</span>
                <span class="badge bg-warning text-dark">
                    <i class="fas fa-coins"></i> <span id="player-money">0</span>
                </span>
                <span class="badge bg-info text-dark ms-1">
                    <i class="fas fa-star"></i> <span id="player-xp">0</span>
                </span>
            </div>
        </div>
    </nav>

    <main class="container-fluid game-main">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/api.js"></script>
    <script>
        // Auto-load player stats
        document.addEventListener('DOMContentLoaded', function() {
            loadPlayerStats();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>